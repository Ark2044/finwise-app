# FinWise Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE - Neon PostgreSQL
# Get from: https://console.neon.tech -> Connection Details
# ===========================================
DATABASE_URL=postgres://user:password@host.neon.tech/neondb?sslmode=require

# ===========================================
# JWT SECRETS - Generate secure random strings
# Use: openssl rand -base64 32
# ===========================================
JWT_SECRET=your_jwt_access_token_secret_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_token_secret_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ===========================================
# NEON AUTH (Stack) - Server-side key
# Get from: https://console.neon.tech -> Auth -> Configuration
# ===========================================
STACK_PROJECT_ID=your_neon_auth_project_id
STACK_SECRET_SERVER_KEY=your_neon_auth_secret_server_key

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# CORS - Allowed origins (comma-separated)
# ===========================================
CORS_ORIGIN=http://localhost:8081,http://localhost:19006

# ===========================================
# RAZORPAY PAYMENT GATEWAY
# Get from: https://dashboard.razorpay.com/app/keys
# Test Mode: Use keys starting with rzp_test_
# Live Mode: Use keys starting with rzp_live_
# ===========================================
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_KEY_SECRET

# Webhook Secret (Optional but recommended)
# Get from: Dashboard -> Settings -> Webhooks
# Create webhook URL: https://yourdomain.com/webhooks/razorpay
# Select events: payment.captured, payment.failed, order.paid
RAZORPAY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET
